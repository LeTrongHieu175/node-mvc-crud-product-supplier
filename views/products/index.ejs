<%- include("../partials/header") %>
<h1>Products</h1>
<a href="/products/new">Add Product</a>
<ul>
  <% products.forEach(p => { %>
    <li>
      <%= p.name %> - $<%= p.price %> - Qty: <%= p.quantity %> - Supplier: <%= p.supplierId ? p.supplierId.name : "N/A" %>
      <a href="/products/<%= p._id %>/edit">Edit</a> |
      <a href="/products/<%= p._id %>/delete">Delete</a>
    </li>
  <% }) %>
</ul>
<%- include("../partials/footer") %>